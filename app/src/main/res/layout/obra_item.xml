<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="14dp"
    app:cardElevation="6dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imageViewCamara"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/camara"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_camera_24"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <TextView
            android:id="@+id/textViewPromotor"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="Promotor"
            android:text="Promotor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageViewCamara"
            app:layout_constraintTop_toTopOf="@+id/imageViewCamara" />

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:contentDescription="Titulo Obra"
            android:text="Titulo Obra"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textViewPromotor"
            app:layout_constraintTop_toTopOf="@+id/textViewPromotor" />

        <TextView
            android:id="@+id/textViewTipo"
            android:layout_width="150dp"
            android:layout_height="19dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Tipo de Obra"
            android:text="Tipo de Obra"
            app:layout_constraintStart_toStartOf="@+id/textViewPromotor"
            app:layout_constraintTop_toBottomOf="@+id/textViewPromotor" />

        <ImageView
            android:id="@+id/imageViewVisita"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTipo"
            app:layout_constraintStart_toEndOf="@+id/textViewTipo"
            app:srcCompat="@drawable/ic_bookmarks_24px"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textViewVisitas"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:contentDescription="N_Visitas"
            android:text="NÂº Visitas"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewVisita"
            app:layout_constraintStart_toEndOf="@+id/imageViewVisita"
            app:layout_constraintTop_toTopOf="@+id/imageViewVisita" />

        <TextView
            android:id="@+id/textViewReferencia"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:contentDescription="Referencia"
            android:text="Referencia"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textViewTitulo"
            app:layout_constraintTop_toTopOf="@+id/textViewTipo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>