<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/buttonPlus"
        android:onClick="initActivityObraNueva"
        android:layout_width="169dp"
        android:layout_height="149dp"
        android:background="@android:color/transparent"
        android:drawableTop="@mipmap/arq_plus_36dp"
        android:text="@string/visita_nueva"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonArchivo"
        app:layout_constraintEnd_toStartOf="@+id/buttonCurso"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/buttonCurso"
        android:onClick="initActivityObraCurso"
        android:layout_width="169dp"
        android:layout_height="149dp"
        android:background="@android:color/transparent"
        android:drawableTop="@mipmap/arq_casa_36dp"
        android:text="@string/en_curso"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAgenda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/buttonArchivo"
        android:layout_width="169dp"
        android:layout_height="149dp"
        android:background="@android:color/transparent"
        android:drawableTop="@mipmap/arq_archivo_36dp"
        android:text="@string/finalizadas"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonAgenda"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus"
        app:layout_constraintVertical_bias="0.253"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/buttonAgenda"
        android:onClick="initActivityAgenda"
        android:layout_width="169dp"
        android:layout_height="149dp"
        android:background="@android:color/transparent"
        android:drawableTop="@mipmap/arq_agenda_36dp"
        android:text="@string/operadores"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonArchivo"
        app:layout_constraintTop_toBottomOf="@+id/buttonCurso"
        app:layout_constraintVertical_bias="0.253"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>